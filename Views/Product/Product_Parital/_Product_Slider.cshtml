@model _188252_BT2.Models.CollectionDataModel


<div class="owl-carousel owl-theme">

     <div class="item">
            <img src="@Model.product.Product_Img" alt="hinh">
        </div>

    @for (int i = 0; i < @Model.productList.Count(); i++)
    {
        <div class="item">
            <img src="@Model.productList[i].Product_Img" alt="hinh">
        </div>
        
    }








</div>
<div class="owl-dots">

    <button role="button" class="owl-dot " data-info="1" data-position-top="658"
            data-position-left="0" style="height: 12.5%; user-select: auto;">
            <img class="theImg"
             src="@Model.product.Product_Img"
             alt="Đồ chơi trạm cảnh sát tuần tra &amp; cứu hỏa biển LEGO CITY 60308 - 1">
        </button>
    @foreach (var item in Model.productList)
    {
        <button role="button" class="owl-dot " data-info="1" data-position-top="658"
            data-position-left="0" style="height: 12.5%; user-select: auto;">
            <img class="theImg"
             src="@item.Product_Img"
             alt="Đồ chơi trạm cảnh sát tuần tra &amp; cứu hỏa biển LEGO CITY 60308 - 1">
        </button>
     
    }
</div>